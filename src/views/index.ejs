<!doctype html>
<html lang="pt-br">

<head>
  <meta charset="utf-8">
  <title>Controle de Despesas</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    crossorigin="anonymous">

  <style>
    body {
      background: #0b0d10;
      color: #e8eaed;
    }

    .navbar,
    .offcanvas {
      background: #14181f;
    }

    .card {
      background: #171a21;
      border: 1px solid #232833;
      height: 100%;
    }

    .badge-type {
      letter-spacing: .3px;
    }

    .form-control,
    .form-select,
    .form-button {
      background: #0f131a;
      color: #e8eaed;
      border-color: #232833;
    }

    .form-button {
      background: #0758d2;
    }

    .form-control::placeholder {
      color: #9aa4af;
    }

    .page-link {
      background: #0f131a;
      color: #e8eaed;
      border-color: #232833;
    }

    .page-item.active .page-link {
      background: #375a7f;
      border-color: #375a7f;
    }

    a,
    a:hover {
      color: #9ad0ff;
    }

    .total {
      font-size: 1.2rem;
      font-weight: 600;
      color: #9ad0ff;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark sticky-top">
    <div class="container">
      <a class="navbar-brand fw-bold" href="#">Controle de Despesas</a>
    </div>
  </nav>

  <!-- Hero -->
  <section class="py-5 search-hero">
    <div class="container">
      <div class="row g-3 align-items-end">
        <div class="col-12 col-lg-6">
          <h1 class="fw-bold mb-2">Controle suas despesas pessoais</h1>
          <p class="text-secondary mb-0">Mantenha suas finanças organizadas e em dia.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Formulário de Cadastro de Despesas -->
  <section class="py-4">
    <div class="container">
      <form id="despesaForm">
        <div class="row g-3">
          <div class="col-12 col-md-4">
            <input id="descricao" type="text" class="form-control" placeholder="Descrição da despesa">
          </div>
          <div class="col-12 col-md-4">
            <select id="categoria" type="text" class="form-control" placeholder="Categoria (Ex: Alimentação)">
              <% categorias.forEach(cat => { %>
                <option> <%= cat.nome %> </option>
              <% }) %>
          
            </select>
          </div>
          <div class="col-12 col-md-4">
            <select id="pagamento" type="text" class="form-control" placeholder="Forma de Pagamento (Ex: Pix)">
              <option>Pix</option>
              <option>Cartão de Debito</option>
              <option>Cartão de Crédito</option>
              <option>Boleto</option>
              <option>Outro</option>
            </select>
          </div>
          <div class="col-12 col-md-2">
            <input id="valor" type="number" class="form-control" placeholder="Valor" step="0.01">
          </div>
          <div class="col-12 col-md-2">
            <button type="submit" class="btn form-button w-100">Adicionar Despesa</button>
          </div>
        </div>
      </form>
    </div>
  </section>

  <!-- Tabela de Despesas -->
  <main class="py-4">
    <div class="container">
      <h3>Despesas Registradas</h3>
      <div class="table-responsive">
        <table class="table table-dark table-striped align-middle">
          <thead>
            <tr>
              <th>Descrição</th>
              <th>Categoria</th>
              <th>Valor</th>
              <th>Ações</th>
            </tr>
          </thead>
          <tbody id="despesasTabela">
            <!-- Despesas via JS -->
          </tbody>
        </table>
      </div>
      <div class="text-end total mt-3">
        Total: R$ <span id="totalValor">0.00</span>
      </div>
    </div>
  </main>

  <footer class="py-4 border-top border-secondary" style="border-color:#232833!important;">
    <div class="container text-center text-secondary small">
      © <span id="year"></span> Controle de Despesas.
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    crossorigin="anonymous"></script>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const despesaForm = document.getElementById('despesaForm');
      const despesasTabela = document.getElementById('despesasTabela');
      const totalValor = document.getElementById('totalValor');

      // Carregar despesas do localStorage
      let despesas = JSON.parse(localStorage.getItem('despesas')) || [];

      // Atualiza a tabela
      function atualizarTabela() {
        despesasTabela.innerHTML = '';
        let total = 0;

        despesas.forEach((d, i) => {
          total += parseFloat(d.valor);
          const row = document.createElement('tr');
          row.innerHTML = `
            <td>${d.descricao}</td>
            <td>${d.categoria}</td>
            <td>R$ ${parseFloat(d.valor).toFixed(2)}</td>
            <td>
              <button class="btn btn-sm btn-danger" onclick="removerDespesa(${i})">Remover</button>
            </td>
          `;
          despesasTabela.appendChild(row);
        });

        totalValor.textContent = total.toFixed(2);
        localStorage.setItem('despesas', JSON.stringify(despesas));
      }

      // Adicionar despesa
      despesaForm.addEventListener('submit', (e) => {
        e.preventDefault();

        const descricao = document.getElementById('descricao').value.trim();
        const categoria = document.getElementById('categoria').value.trim();
        const valor = parseFloat(document.getElementById('valor').value);

        if (!descricao || !categoria || !valor) {
          alert("Por favor, preencha todos os campos!");
          return;
        }

        despesas.push({ descricao, categoria, valor });
        atualizarTabela();
        despesaForm.reset();
      });

      // Remover despesa (função global)
      window.removerDespesa = (index) => {
        if (confirm("Deseja realmente remover esta despesa?")) {
          despesas.splice(index, 1);
          atualizarTabela();
        }
      };

      // Atualiza ano no rodapé
      document.getElementById('year').textContent = new Date().getFullYear();

      // Exibe despesas salvas
      atualizarTabela();
    });
  </script>
</body>

</html>
