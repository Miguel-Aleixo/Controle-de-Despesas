<!doctype html>
<html lang="pt-br">

<head>
  <meta charset="utf-8">
  <title>Controle de Despesas</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Google Font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

  <style>
    /* GLOBAL */
    body {
      background: #0d1117;
      color: #e6edf3;
      font-family: 'Inter', sans-serif;
      margin: 0;
      padding: 0;
    }

    .container-custom {
      max-width: 1100px;
      margin: 0 auto;
      padding: 0 16px;
    }

    /* NAVBAR */
    nav {
      background: rgba(13, 17, 23, 0.85);
      backdrop-filter: blur(8px);
      border-bottom: 1px solid #21262d;
      padding: 12px 0;
      position: sticky;
      top: 0;
      z-index: 50;
    }

    .navbar-content {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .navbar-brand {
      font-weight: 700;
      font-size: 1.35rem;
      color: #e6edf3;
      text-decoration: none;
    }

    .nav-buttons {
      display: flex;
      gap: 10px;
      align-items: center;
    }

    .nav-btn-outline {
      padding: 6px 14px;
      border-radius: 9px;
      border: 1.5px solid #2d333b;
      background: transparent;
      color: #e6edf3;
      cursor: pointer;
      text-decoration: none;
      transition: .2s;
      font-size: 0.9rem;
    }

    .nav-btn-outline:hover {
      background: #2385ff22;
      border-color: #2385ff;
    }

    .nav-btn-outline.green:hover {
      background: #2ecc7122;
      border-color: #2ecc71;
    }

    .nav-btn-outline.yellow:hover {
      background: #f1c40f22;
      border-color: #f1c40f;
    }

    /* HERO */
    .hero {
      padding: 60px 0;
      background: linear-gradient(135deg, #161b22 0%, #0d1117 60%);
      border-bottom: 1px solid #21262d;
    }

    /* CARD */
    .card-custom {
      background: #161b22;
      border: 1px solid #2d333b;
      border-radius: 14px;
      padding: 20px;
      margin-top: 20px;
    }

    /* FORM */
    .form-group {
      margin-bottom: 16px;
    }

    .form-control,
    .form-select {
      width: 100%;
      background: #0d1117;
      border: 1px solid #30363d;
      color: #e6edf3;
      border-radius: 10px;
      padding: 10px 12px;
      transition: .2s;
      font-size: 0.95rem;
    }

    .form-control:focus,
    .form-select:focus {
      border-color: #579aff;
      box-shadow: 0 0 0 4px rgba(120, 160, 255, 0.25);
      outline: none;
    }

    .btn-main {
      width: 100%;
      background: #2385ff;
      border: none;
      border-radius: 10px;
      padding: 12px;
      font-weight: 600;
      transition: .2s;
      cursor: pointer;
      color: #fff;
    }

    .btn-main:hover {
      background: #1f74db;
    }

    /* TABLE */
    .table-custom {
      background: #161b22;
      border-radius: 12px;
      overflow: hidden;
      border: 1px solid #2d333b;
      margin-top: 20px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    table thead {
      background: #1c2128;
    }

    table th,
    table td {
      padding: 14px;
      border-bottom: 1px solid #262c33;
    }

    table th {
      color: #9eb4c1;
      text-align: left;
      font-weight: 600;
    }

    table td {
      color: #c9d1d9;
    }

    tr:hover td {
      background: #1c2128 !important;
    }

    .btn-danger {
      padding: 6px 12px;
      border-radius: 10px;
      border: none;
      background: #d9534f;
      color: #fff;
      cursor: pointer;
      transition: .2s;
    }

    .btn-danger:hover {
      background: #c9302c;
    }

    /* TOTAL */
    .total-box {
      background: #161b22;
      border: 1px solid #30363d;
      border-radius: 12px;
      padding: 15px 20px;
      font-size: 1.3rem;
      text-align: right;
      color: #2385ff;
      font-weight: 700;
      margin-top: 14px;
    }

    /* FOOTER */
    footer {
      margin-top: 30px;
      border-top: 1px solid #21262d;
      background: #0f141a;
      padding: 20px;
      color: #8b949e;
      text-align: center;
    }
  </style>
</head>

<body>

  <!-- NAVBAR -->
  <nav>
    <div class="container-custom navbar-content">

      <a class="navbar-brand" href="#">Controle de Despesas</a>

      <div class="nav-buttons">

        <a href="/usuario/login" class="nav-btn-outline">Login</a>

        <a href="/usuario/cadastro" class="nav-btn-outline green">Cadastrar Usuário</a>

        <a href="/cadastrar_categoria" class="nav-btn-outline yellow">Cadastrar Categoria</a>

      </div>

    </div>
  </nav>

  <!-- HERO -->
  <section class="hero">
    <div class="container-custom">
      <h1 class="fw-bold mb-2">Gerencie suas despesas com facilidade</h1>
      <p class="text-secondary">Organização financeira simples, rápida e eficiente.</p>
    </div>
  </section>

  <!-- FORM -->
  <section class="py-4">
    <div class="container-custom">

      <div class="card-custom">

        <h4 class="mb-3">Adicionar Nova Despesa</h4>

        <form id="despesaForm">

          <div class="form-group">
            <input id="descricao" type="text" class="form-control" placeholder="Descrição">
          </div>

          <div class="form-group">
            <select id="categoria" class="form-select">
              <% categorias.forEach(cat => { %>
                <option><%= cat.nome %></option>
              <% }) %>
            </select>
          </div>

          <div class="form-group">
            <select id="pagamento" class="form-select">
              <option>Pix</option>
              <option>Cartão Débito</option>
              <option>Cartão Crédito</option>
              <option>Boleto</option>
              <option>Outro</option>
            </select>
          </div>

          <div class="form-group">
            <input id="valor" type="number" class="form-control" placeholder="Valor" step="0.01">
          </div>

          <button class="btn-main" type="submit">Adicionar</button>

        </form>
      </div>
    </div>
  </section>

  <!-- TABLE -->
  <main class="py-4">
    <div class="container-custom">

      <h3 class="mb-3">Despesas Registradas</h3>

      <div class="table-custom">
        <table>
          <thead>
            <tr>
              <th>Descrição</th>
              <th>Categoria</th>
              <th>Valor</th>
              <th style="width: 90px;">Ações</th>
            </tr>
          </thead>
          <tbody id="despesasTabela"></tbody>
        </table>
      </div>

      <div class="total-box">
        Total: R$ <span id="totalValor">0.00</span>
      </div>

    </div>
  </main>

  <!-- FOOTER -->
  <footer>
    © <span id="year"></span> Controle de Despesas — Todos os direitos reservados.
  </footer>

  <!-- JS -->
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const despesaForm = document.getElementById("despesaForm");
      const despesasTabela = document.getElementById("despesasTabela");
      const totalValor = document.getElementById("totalValor");

      let despesas = JSON.parse(localStorage.getItem("despesas")) || [];

      function atualizarTabela() {
        despesasTabela.innerHTML = "";
        let total = 0;

        despesas.forEach((d, i) => {
          total += parseFloat(d.valor);

          const row = document.createElement("tr");
          row.innerHTML = `
            <td>${d.descricao}</td>
            <td>${d.categoria}</td>
            <td>R$ ${parseFloat(d.valor).toFixed(2)}</td>
            <td>
              <button class="btn-danger" onclick="removerDespesa(${i})">Excluir</button>
            </td>
          `;
          despesasTabela.appendChild(row);
        });

        totalValor.textContent = total.toFixed(2);
        localStorage.setItem("despesas", JSON.stringify(despesas));
      }

      despesaForm.addEventListener("submit", (e) => {
        e.preventDefault();

        const desc = descricao.value.trim();
        const categoriaVal = categoria.value.trim();
        const valorVal = parseFloat(valor.value);

        if (!desc || !categoriaVal || !valorVal) {
          alert("Preencha todos os campos!");
          return;
        }

        despesas.push({ descricao: desc, categoria: categoriaVal, valor: valorVal });
        atualizarTabela();
        despesaForm.reset();
      });

      window.removerDespesa = (i) => {
        if (confirm("Deseja remover esta despesa?")) {
          despesas.splice(i, 1);
          atualizarTabela();
        }
      };

      document.getElementById("year").textContent = new Date().getFullYear();
      atualizarTabela();
    });
  </script>

</body>

</html>
  